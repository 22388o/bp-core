-- no dependencies

data LockTime         :: U32
data Outpoint         :: txid Txid, vout Vout
data Sats             :: U64
data ScriptBytes      :: [U8 ^ ..0xffffffffffffffff]
data ScriptPubkey     :: ScriptBytes
data SeqNo            :: U32
data SigScript        :: ScriptBytes
data Tx               :: version TxVer
                       , inputs [TxIn ^ ..0xffffffffffffffff]
